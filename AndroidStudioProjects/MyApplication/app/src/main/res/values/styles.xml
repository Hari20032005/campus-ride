<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Custom text styles -->
    <style name="TextAppearance.CampusRide.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textSize">@dimen/text_size_display</item>
        <item name="android:textColor">@color/on_background</item>
    </style>

    <style name="TextAppearance.CampusRide.Headline2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textSize">@dimen/text_size_headline</item>
        <item name="android:textColor">@color/on_background</item>
    </style>

    <style name="TextAppearance.CampusRide.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textColor">@color/on_background</item>
    </style>

    <style name="TextAppearance.CampusRide.Subtitle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textSize">@dimen/text_size_subtitle</item>
        <item name="android:textColor">@color/on_background</item>
    </style>

    <style name="TextAppearance.CampusRide.Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/text_size_body</item>
        <item name="android:textColor">@color/on_background</item>
    </style>

    <style name="TextAppearance.CampusRide.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/on_background</item>
    </style>

    <!-- Custom button styles -->
    <style name="Widget.CampusRide.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textSize">@dimen/text_size_body</item>
        <item name="android:paddingTop">@dimen/spacing_medium</item>
        <item name="android:paddingBottom">@dimen/spacing_medium</item>
    </style>

    <style name="Widget.CampusRide.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textSize">@dimen/text_size_body</item>
        <item name="android:paddingTop">@dimen/spacing_medium</item>
        <item name="android:paddingBottom">@dimen/spacing_medium</item>
    </style>

    <!-- Custom card styles -->
    <style name="Widget.CampusRide.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="cardBackgroundColor">@color/surface</item>
    </style>
</resources>